  %head
    %meta{'charset': 'utf-8'}
    %title P2PU |
      - block title    
    <meta name="description" content="{% block description %}{{ _('Learning for everyone, by everyone, about almost anything.') }}{% endblock %}" />
    %meta{'name': 'author', 'content': 'p2pu'}
    %meta{'name': 'viewport', 'content': 'width=device-width, initial_scale=1.0'}
    %link{'href': '={{STATIC_URL}}images/favicon.ico', 'rel': 'shortcut icon'}
    %link{'href': '={{STATIC_URL}}images/apple-touch-icon.png', 'rel': 'apple-touch-icon'}
    %link{'href': 'https://fonts.googleapis.com/css?family=Arvo:regular,italic,bold,bolditalic', 'rel': 'stylesheet', 'type': 'text/css'}
    %link{'href': 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/themes/base/jquery-ui.css', 'rel': 'stylesheet', 'type': 'text/css'}
    %link{'href': '={{STATIC_URL}}css/jcarousel/tango/skin.css', 'rel': 'stylesheet'}
    %link{'href': 'https://www.google.com/cse/style/look/default.css', 'rel': 'stylesheet', 'type': 'text/css'}
    - flag 'css-framework'
      %link{'href': '={{STATIC_URL}}css/bootstrap.css', 'rel': 'stylesheet'}
      %link{'href': '={{STATIC_URL}}css/bootstrap-responsive.css', 'rel': 'stylesheet'}
      %script{'src': '={{STATIC_URL}}js/bootstrap.js', 'rel': 'stylesheet'}
    - else
      %link{'href': '={{STATIC_URL}}css/font-awesome.css', 'rel': 'stylesheet'}
      %link{'href': '={{STATIC_URL}}css/style.css?v=1', 'rel': 'stylesheet'}
      %link{'href': '={{STATIC_URL}}css/batucada.css?v=1', 'rel': 'stylesheet'}
      %link{'href': "={{STATIC_URL}}={{ _('css/style-en.css')}}", 'rel': 'stylesheet'}
      %link{'href': '={{STATIC_URL}}js/libs/prettify/prettify.css', 'rel': 'stylesheet'}
    - endflag   
      %link{'href': '={{STATIC_URL}}css/jquery.fancybox-1.3.4.css', 'rel': 'stylesheet', 'media': 'screen'}
      %link{'href': '={{STATIC_URL}}js/libs/jquery.ui.spinner/ui.spinner.css', 'rel': 'stylesheet'}
      - block css
      %script{'src': '={{STATIC_URL}}js/libs/modernizer-1.6.min.js/'}
      %script{'src': '={{STATIC_URL}}ckeditor/ckeditor/ckeditor.js'}
      %script{'src': '={{STATIC_URL}}js/libs/jquery-1.4.2.min.js'}
     - block links     

     %body{'id': "{% block bodyid %}body{% endblock %}", 'class': "{% block bodyclasses %}.body {% endblock %}"}
     - block header
       %header
         #masthead
           .container
             %a#logo.ir 'href': "{% if user.is_authenticated %}{% locale_url dashboard %}{% else %}{% locale_url splash %}{% endif %}"}
               p2pu
             %nav#main-nav.nav-menus
               %ul
                 %li
                   %a{'href': '={{ learn_default }}', 'class': 'top-level'}
                     {{ _('Learn') }}
                 %li
                   %a{'href': "={{ locale_url static_page_show 'get_involved'}}"}
                     {{ _('Contribute') }}
             %nav#user-nav
               - if user.is_authenticated
                 %ul
                   %li#user.menu
                     %a#user-link.top-level{'href': '#'}
                       - if user.get_profile
                         %img#user-picture{'src': '={{ user.get_profile_image_or_default }}', 'alt': '={ user.get_profile }'}
                       - else
                         %img#user-picture{'src': '={{ STATIC_URL }}images/member-missing.png', 'alt': '={ user.get_profile }'}
                       %span= user.user_name
                       - if messages_inbox_count > 0
                         %span#inbox-count.new-messages= messages_inbox_count
                       %span.dropdown
                     %ul#user-actions